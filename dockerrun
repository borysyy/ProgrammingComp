#!/bin/bash

# Checking if username was entered
if [ $# -lt 1 ]; then
  echo "Usage: $0 <username> [<usedefaultpasswd>]"
  exit 1
elif [ $# -gt 2 ]; then
  echo "Usage: $0 <username> [<usedefaultpasswd>]"
  exit 1
fi

# Username argument
username="$1"
defaultpasswd="$2"

# Port variable
PORT=2200

# Check if the port is open
while true; do
nc -zv localhost $PORT > /dev/null 
    # If not go to the next one
    if [ $? -eq 0 ]; then
    PORT=$(expr $PORT + 1)
    else
        break
    fi

done 

userdirectory=$(realpath ~/Desktop/Submissions/$username)

if [ ! -d "$userdirectory" ]; then
    # If it doesn't exist, create it
    mkdir -p "$userdirectory"
fi


# Printing that the container was successful 
echo "Running $username's container"

# Printing what port you're using
echo "Using port $PORT"

# Running the docker image
docker run -t -v ~/Desktop/Problems:/problems:ro -v "$userdirectory":/submissions -e USER="$username" -e DEFAULTPASSWD="$defaultpasswd" -p $PORT:22 users 
 

   
