<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Submission</title>
    <link href="../../css/styles.css" rel="stylesheet" />
  </head>

  <body data-bs-theme="dark">
    <div class="bg-primary">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="col-8">
            <h1 class="display-4">SUNY Poly Programming Competition</h1>
          </div>
          <div class="col-4 d-flex justify-content-end">
            <a href="/problems/spring/2024" class="btn btn-primary"
              >Back to submitting</a
            >
          </div>
        </div>
      </div>
    </div>

    <div>
      <div class="mt-4 text-center">
        <div class="container my-4 py-4">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Teamname</th>
                <th scope="col">Score</th>
                <th scope="col">Members</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= team.teamname %></td>
                <td><%= team.score %></td>
                <td><%= team.members.replace(",", ", ") %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="container my-4 py-4">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Username</th>
                <th scope="col">Compiler Output</th>
                <th scope="col">Program Output</th>
                <th scope="col">Score</th>
                <th scope="col">Problem</th>
              </tr>
            </thead>
            <tbody>
              <% for (const submission of submissions) { %>
              <tr>
                <td><%= submission.username %></td>
                <td><%= submission.compilerOutput %></td>
                <td><%= submission.programOutput %></td>
                <td><%= submission.scoreOutput %></td>
                <td><%= submission.problem_name %></td>
              </tr>

              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
